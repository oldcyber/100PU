<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout android:layout_width="fill_parent" android:layout_height="fill_parent"
                xmlns:android="http://schemas.android.com/apk/res/android" android:weightSum="100"
                android:id="@+id/TrainingDialog" android:background="#e2e2e2">
    <TableRow android:layout_weight="99" android:layout_width="fill_parent" android:layout_height="fill_parent"
              android:weightSum="1" android:id="@+id/InfoArea">
        <TextView android:layout_width="fill_parent" android:layout_height="fill_parent" android:layout_weight="1"
                  android:gravity="center" android:id="@+id/DialogTrainingTex" android:textStyle="bold"
                  android:textSize="160dp" android:textColor="#ff8c00"/>
        <TextView android:layout_width="fill_parent" android:layout_height="fill_parent" android:layout_weight="1"
                  android:gravity="center" android:textStyle="bold" android:textSize="160dp"
                  android:id="@+id/DialogRestTex" android:visibility="gone" android:textColor="#2e8b57"/>
    </TableRow>
    <TableRow android:weightSum="10" android:layout_weight="1" android:layout_height="fill_parent"
              android:layout_width="fill_parent" android:id="@+id/ButtonArea">
        <Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_gravity="bottom"
                android:id="@+id/ButtonBack" android:text="@string/dialog_Back" android:layout_weight="4"/>
        <Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_gravity="bottom"
                android:id="@+id/ButtonNext" android:text="@string/dialog_Next" android:layout_weight="4"/>
    </TableRow>
</RelativeLayout>
